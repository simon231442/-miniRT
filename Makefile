NAME := miniRT

################################################################################
#                               DIRECTORIES                                    #
################################################################################
SRC_DIR = src
OBJ_DIR = obj
INC_DIR = includes
LIB_DIR = lib

################################################################################
#                                MINIRT SRC                                    #
################################################################################

vpath	%.c src

SOURCES := minirt.c

#libft + gnl a ajoute

.DEFAULT_GOAL := all
################################################################################
#                                 LIBRARY                                      #
################################################################################

################################################################################
#                             COMPILER OPTIONS                                 #
################################################################################
UNAME_N := $(shell uname -n)
ifeq ($(UNAME_N),Arch-Jules)
	CC	:= tcc
else
	CC	:= gcc
endif

CFLAGS		:= -g -Wall -Werror -Wextra
CPPFLAGS	:= -Iincludes

OBJETS		:= $(SOURCES:%.c=%.o)

#objet dans dossier

################################################################################
#                              TARGETS & RULES                                 #
################################################################################
$(NAME) : $(OBJETS)
	$(CC) $(CFLAGS) $(OBJETS) -o $(NAME)

.PHONY: all
all : $(NAME)

.PHONY: clean
clean : 
	$(RM) *.o

.PHONY: fclean
fclean : clean
	$(RM) $(NAME)
#clean libft/gnl

.PHONY: re
re : fclean all
